<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shuva.kcms.RegisterGuardian">

    <Button
        android:id="@+id/btnResetGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnSubmitGuardian"
        android:layout_toEndOf="@+id/btnSubmitGuardian"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

    <EditText
        android:id="@+id/txtNameGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/NameGuardian"
        android:layout_alignLeft="@+id/NameGuardian"
        android:layout_alignStart="@+id/NameGuardian" />

    <TextView
        android:id="@+id/NameGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textRegGuardian"
        android:layout_alignLeft="@+id/textRegGuardian"
        android:layout_alignStart="@+id/textRegGuardian" />

    <TextView
        android:id="@+id/textRegGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textStyle="bold"
        android:text="Guardian Registration"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-128dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/EmailGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNameGuardian"
        android:layout_alignStart="@+id/txtNameGuardian"
        android:layout_below="@+id/txtNameGuardian"
        android:layout_marginTop="21dp"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtEmailGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter Email"
        android:layout_below="@+id/EmailGuardian"
        android:layout_alignLeft="@+id/EmailGuardian"
        android:layout_alignStart="@+id/EmailGuardian" />

    <TextView
        android:id="@+id/PhoneNoGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmailGuardian"
        android:layout_alignStart="@+id/txtEmailGuardian"
        android:layout_below="@+id/txtEmailGuardian"
        android:layout_marginTop="28dp"
        android:text="Phone No."
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtPhoneNoGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Phone No."
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/PhoneNoGuardian"
        android:layout_alignLeft="@+id/PhoneNoGuardian"
        android:layout_alignStart="@+id/PhoneNoGuardian" />

    <Button
        android:id="@+id/btnSubmitGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignBottom="@+id/btnResetGuardian"
        android:layout_toRightOf="@+id/EmailGuardian"
        android:layout_toEndOf="@+id/EmailGuardian"
        android:layout_alignTop="@+id/btnResetGuardian" />

</RelativeLayout>
