<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shuva.kcms.loginFunction">

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Verify and Proceed"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnOTPSubmit"
        android:layout_toStartOf="@+id/btnOTPSubmit" />

    <EditText
        android:id="@+id/txtNameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/NameLogin"
        android:layout_alignLeft="@+id/NameLogin"
        android:layout_alignStart="@+id/NameLogin" />

    <TextView
        android:id="@+id/NameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Name"
        android:textSize="18sp"
        android:layout_below="@+id/textLogin"
        android:layout_alignLeft="@+id/textLogin"
        android:layout_alignStart="@+id/textLogin" />

    <EditText
        android:id="@+id/txtNameOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:hint="Enter OTP"
        android:inputType="number"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnVerify"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/NameOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/txtNameOTP"
        android:layout_alignBottom="@+id/txtNameOTP"
        android:layout_alignLeft="@+id/txtPhoneNoLogin"
        android:layout_alignStart="@+id/txtPhoneNoLogin" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textStyle="bold"
        android:text="Login"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-128dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/EmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNameLogin"
        android:layout_alignStart="@+id/txtNameLogin"
        android:layout_below="@+id/txtNameLogin"
        android:layout_marginTop="21dp"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter Email"
        android:layout_below="@+id/EmailLogin"
        android:layout_alignLeft="@+id/EmailLogin"
        android:layout_alignStart="@+id/EmailLogin" />

    <TextView
        android:id="@+id/PhoneNoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmailLogin"
        android:layout_alignStart="@+id/txtEmailLogin"
        android:layout_below="@+id/txtEmailLogin"
        android:layout_marginTop="28dp"
        android:text="Phone No."
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtPhoneNoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Phone No."
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/PhoneNoLogin"
        android:layout_alignLeft="@+id/PhoneNoLogin"
        android:layout_alignStart="@+id/PhoneNoLogin" />

    <Button
        android:id="@+id/btnOTPSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="OTP"
        android:layout_alignBottom="@+id/txtPhoneNoLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
